{
    "manifest_version": 3,
    "name": "Genius",
    "description": "Making your wishlists come true.",
    "action": {
        "default_icon": "genie.png",
        "default_popup": "popup.html",
        "default_title": "Genius"
    },
    "permissions": [
        "activeTab"
    ],
    "version": "1.0.3",
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "browser.js"
            ],
            "run_at": "document_start"
        }
    ]
}